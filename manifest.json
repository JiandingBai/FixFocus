{
    "manifest_version": 3,
    "name": "Focus Tracker for Learning Videos",
    "version": "1.0",
    "description": "Pauses videos when user gaze is off-screen.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  